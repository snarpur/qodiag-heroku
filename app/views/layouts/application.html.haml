!!!
%html
  %head
    = yield(:head)
    =csrf_meta_tag
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans:400,700"
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    %script{:type => 'text/javascript'}
      ="I18n.defaultLocale = '#{I18n.default_locale}';"
      ="I18n.locale = '#{I18n.locale}';"


    %style{:type => 'text/css'}
      =yield(:style_header)
    =javascript_tag do
      = yield(:jstemplates)

    %title
      Snarpur

  %body{:class => yield(:body_class)}
    #wrapper{:class => role_view}
      #header
        %h2 Snarpur
        %div
          =render 'shared/log_in_out'
      #flash
        -flash.each do |name, msg|
          %div{:class => name}
            =msg
      #container{:class => yield(:css_hook)}
        %ul.nav
          %li.home
            %a{:href => "/users"}
              = t('navigation.home')
        #content
          = yield
      #footer
        %span
          ="Snarpur #{Date.today.year}| Fallegt virkar betur"

