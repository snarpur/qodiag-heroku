!!!
%html
  %head
    =yield(:head)
    =csrf_meta_tag

    %link{:href => 'http://fonts.googleapis.com/css?family=Asap:400,700,700italic,400italic', :rel => 'stylesheet', :type => 'text/css'}
    =stylesheet_link_tag "login"
    =javascript_include_tag "login_application"

    %script{:type => 'text/javascript'}
      ="I18n.defaultLocale = '#{I18n.default_locale}';"
      ="I18n.locale = '#{I18n.locale}';"


    %style{:type => 'text/css'}
      =yield(:style_header)
    =javascript_tag do
      = yield(:jstemplates)

    //=yield :backbone_bootstrap

    %title
      Qodiag - Quality of diagnosis

  %body{:class => yield(:body_class)}
    #page{:class => 'container'}
      #wrapper
        %img{:src => '/assets/2013/logo-big.png', :alt => 'Qodiag', :class => 'logo'}
        #content
          =yield

      #flash
        -flash.each do |name, msg|
          %div{:class => name}
            =msg

    =render "shared/google_analytics"
