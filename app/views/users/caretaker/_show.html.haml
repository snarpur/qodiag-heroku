- registrations = registration_items([:recently_completed,:uncompleted,:overdue],@current_user)
= registrations.size
- registrations.each do |r|
  %h2
    = t('responder_item.registrations')
    = t("responder_item.status.#{r[:name]}")
  %div{:class =>"#{r[:name]} registration"}
    =render r[:partial], :locals => r[:locals]



