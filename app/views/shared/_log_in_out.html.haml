-if user_signed_in?
  %ul{:class => "nav pull-right top-menu"}
    %li{:class=>"dropdown"}
      %a{:href=>"#", :class=>"dropdown-toggle", :data=>{:toggle=>"dropdown"} }
        =image_tag current_user.person.avatar.url(:tiny), {:alt => ''}
        %span{:class=>"username"}
          = current_user.person.full_name
        %b{:class=>"caret"}
      %ul{:class=>"dropdown-menu logout"}
        %li
          %a{:href => destroy_user_session_path}
            %i{:class=>"fa fa-key"}
            = t('actions.sign_out')
