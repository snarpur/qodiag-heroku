%h2
  = t('terms.edit') 
  &nbsp;#{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password
    %i 
      = t('devise.registrations.tips')[0]
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :current_password
    %i
      = t('devise.registrations.tips')[1]
    %br/
    = f.password_field :current_password
  %p= f.submit t('terms.update')
%h3
  = t('devise.registrations.cancel_account')
%p
  = t('devise.registrations.tips')[2]
  = link_to t('devise.registrations.cancel_account'), registration_path(resource_name), :confirm => t('terms.sure'), :method => :delete.
= link_to t('terms.go_back'), :back
