=content_for :content_title, "Skjólstæðingar"
=content_for :subject_content do
  =render "shared/content_title"

%ul{:class => 'reset toolbar'}
  %li{:class => 'left'}
    %form
      %input{:type => 'text', :id => 'patient-search', :class => 'search-input'}

  %li{:class => 'right'}
    =link_to content_tag(:span, '', :class => 'icon-user-add' ) + "Skrá skjólstæðing", new_invitation_item_path, :class => 'button prime'




%table.table
  %thead
    %tr
      %th
        Nafn
      %th{:class => 'small'}
        Óklárðar beiðnir
      %th{:class => 'small'}
        Útrunnar beiðnir
  %tbody
    -@patients.each do |p|
      %tr
        %td
          = link_to p.full_name, subject_path(p)
        %td{:class => 'thin center incomplete'}
          - u = p.responder_items.surveys.uncompleted.count
          -unless u.zero?
            %span
              = u
        %td{:class => 'thin center overdue'}
          - o = p.responder_items.surveys.overdue.count
          - unless o.zero?
            %span
              = o
