-content_for :jstemplates do
  != "var add_second_parent = {};"
  
-@parents = @patient.parents
-@mother= @parents.select{|i| i[:sex] == "female"}.first
-@father = @parents.select{|i| i[:sex] == "male"}.first

=render sibling_partial("siblings_list")
/=render sibling_partial("full_sibling")
=render sibling_partial("siblings_parent_select")

  
-add = t('actions.add')
.nested-context
  = link_to "#{add} #{t('terms.sibling')}", '#added_sibling', :class => "action_element {name: 'add_full_sibling'} button small blue"
  = link_to "#{add} #{t('terms.half_sibling')}", '#added_half_sibling', :class => "action_element {name: 'add_parent_select'} button small blue"
  = link_to "#{add} #{t('terms.foster_sibling')}", '#added_half_sibling', :class => "action_element {name: 'add_foster_sibling'} button small blue"
  .added_siblings

