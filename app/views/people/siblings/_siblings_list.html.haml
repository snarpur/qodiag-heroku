-add = t('actions.add')
.siblings_list
  %ul#full_sibling_list
    %li 
      %h4 Allsystkin
    =list_siblings(@patient.full_siblings)
    %li
      = link_to "#{add} #{t('terms.sibling')}", '#added_sibling', :class => "action_element {name: 'add_full_sibling'}"

  -if @mother.spouses.size > 1
    %ul#half_sibling_mother_list
      %li
        %h4 
          Hálfsystkin 
          %i 
            (sammæðra)
      =list_siblings(@patient.half_siblings(@mother))
      %li
        = link_to "#{add} #{t('terms.half_sibling')}", '#added_half_sibling', :class => "action_element {name: 'add_half_sibling_mother'}"
  
  -if @father.spouses.size > 1
    %ul#half_sibling_father_list
      %li
        %h4 
          Hálfsystkin 
          %i
            (samfeðra)
      =list_siblings(@patient.half_siblings(@father))
      %li
        = link_to "#{add} #{t('terms.half_sibling')}", '#added_half_sibling', :class => "action_element {name: 'add_half_sibling_father'}"
  
  -if @father.spouses.size > 1 || @mother.spouses.size > 1
    %ul#foster_sibling_list
      %li
        %h4 Fóstursystkin
      =list_siblings(@patient.foster_siblings)
      %li
        = link_to "#{add} #{t('terms.foster_sibling')}", '#added_half_sibling', :class => "action_element {name: 'add_foster_sibling'}"
      
