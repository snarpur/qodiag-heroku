= form_for @person do |f|
  .field.inp-txt
    = f.label :firstname
    %span
      = f.text_field :firstname
  .field.inp-txt
    = f.label :lastname
    %span
      = f.text_field :lastname
  .field.inp-rdo
    %span
      = f.radio_button(:sex, "male")
      = f.label(:sex_male, "Karl") 
    %span
      = f.radio_button(:sex, "female") 
      = f.label(:sex_female, "Kona") 
    
  =f.hidden_field :next_step, :value  => "mother"
  =f.hidden_field :ispatient, :value  => 1
  .actions
    = f.submit