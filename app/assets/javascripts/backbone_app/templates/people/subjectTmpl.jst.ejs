
<h4><%= firstname %> <%= lastname %> <span class="btn btn-mini edit-item"><i class="icon-pencil"></i></span></h4>
<ul class="reset">
    <li><%= I18n.t("person.full_cpr")%>: <%= full_cpr %></li>
    <li><%= I18n.t("person.dateofbirth")%>: <%= dateofbirth %></li>

</ul>

<div class="upload modal hide avatarUploadModal_<%= id %>">
    <div class="modal-header"><h3>Hlaða upp mynd</h3></div>
    <div class="modal-body">
        <form accept-charset="UTF-8" class="edit_person" enctype="multipart/form-data" method="post" id="avatarUploadForm_<%= id%>" action="/people/<%= id %>">
            <input name="utf8" type="hidden" value="✓">
            <input name="_method" type="hidden" value="put">
            <input name="authenticity_token" class="authenticity_token" type="hidden" value="">
            <input id="person_avatar" name="person[avatar]" type="file">
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" onclick="$('.avatarUploadModal_<%= id %>').toggle();return false;">Hætta við</a>
        <a href="#" class="btn btn-primary" onclick="document.forms.avatarUploadForm_<%= id%>.submit();return false;">Senda</a>
    </div>
</div>
