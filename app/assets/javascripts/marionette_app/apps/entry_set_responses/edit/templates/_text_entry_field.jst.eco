<label class="col-lg-2 control-label"><%-@title%></label>
<div class="col-lg-10">
  <span class="help-text-block small"><%- @description %></span>
  <textarea class="form-control" id='<%-"text_value_#{@id}"%>'>
    <%=@entry_values.first().get('text_value')%>
  </textarea>
  <span id='<%-"text_value_#{@id}"%>_error' class="help-block"></span>
</div>
