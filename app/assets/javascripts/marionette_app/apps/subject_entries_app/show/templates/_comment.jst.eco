<div class="comment-info">
    <%= @person.full_name %> 
    <span class="comment-date">
      <%- @l("date.formats.long",@created_at) %>
    </span>
</div>
<div class="comment-details">
    <div class="comment-avatar">
        <img src="<%- @avatar %>">
    </div>
</div>
<div class="comment-content">
    <p><%- @text_value %></p>
</div>
