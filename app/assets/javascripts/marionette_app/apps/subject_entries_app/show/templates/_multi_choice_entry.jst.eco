<% if @index() == 0: %>
  <div class="entry-info">
      <%- @person.full_name %> <span class="entry-date"><%- @l("date.formats.long",@created_at) %></span>
  </div>
  <div class="entry-details">
    <div class="entry-avatar">
        <img src="<%= @avatar %>">
    </div>
</div>
<% end %>
<div class="entry-content">
  <p><%- @option_value %></p>
</div>
