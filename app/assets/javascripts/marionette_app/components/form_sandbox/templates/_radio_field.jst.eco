<div class="control-group">
   <label class="control-label" for="<%=@.fieldName%>"><%- @t(@.translationKey) %></label>
    <div class="controls">
      <% if @.options?: %>
        <% for option in @.options: %>
          <label class="radio">
            <input type="radio" class="<%=@.fieldName%>" name="<%=@.fieldName%>" value="<%=option.value%>">
            <% if option.translationKey?: %>
              <%- @t(option.translationKey) %>
            <% else: %>
              <%= option.text %>
            <% end %>
          </label>
        <% end %>
      <% end %>
      <span id="<%=@.fieldName%>_error" class="help-inline"></span>
    </div>
  </div>