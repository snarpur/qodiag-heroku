<div class="control-group">
  <% if @.translationKey?: %>
    <label class="control-label" for="<%=@fieldName%>"><%- @t(@translationKey) %></label>
  <% end %>
  <div class="controls">
    <textarea class="input-xlarge" id="<%=@fieldName%>" placeholder="<%- @t(@translationKey) %>" <%=@isDisabled()%>>
    <span id="<%=@fieldName%>_error" class="help-inline"></span>
  </div>
</div>