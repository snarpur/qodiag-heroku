<div class="control-group">
  <% if @.fieldLabel?: %>
    <label class="control-label" for="<%=@fieldName%>"><%- @label() %></label>
  <% end %>
  <div class="controls">
    <textarea class="input-xlarge" id="<%=@fieldName%>" placeholder="<%- @label() %>" <%=@isDisabled()%>>
    <span id="<%=@fieldName%>_error" class="help-inline"></span>
  </div>
</div>