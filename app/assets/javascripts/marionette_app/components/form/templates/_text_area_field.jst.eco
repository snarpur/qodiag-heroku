<% if @.fieldLabel?: %>
  <label class="col-lg-2 control-label" for="<%=@fieldName%>"><%- @label() %></label>
<% end %>
<div class="col-lg-10">
  <textarea class="form-control" id="<%=@fieldName%>" placeholder="<%- @label() %>" <%=@isDisabled()%>>
  <span id="<%=@fieldName%>_error" class="help-block"></span>
</div>
