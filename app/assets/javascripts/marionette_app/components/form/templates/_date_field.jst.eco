<div class="control-group">
  <% if @.fieldLabel?: %>
    <label class="control-label" for="<%=@.fieldName%>"><%- @label() %></label>
  <% end %>
  <div class="controls">
    <input class="input-xlarge" type="text" id="<%=@.fieldName%>" <%=@isDisabled()%>>
    <span id="<%=@.fieldName%>_error" class="help-inline"></span>
  </div>
</div>